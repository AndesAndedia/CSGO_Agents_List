<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/gambarItem"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="Gambar Item"/>

    <TextView
        android:id="@+id/judulItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="9dp"
        android:layout_marginStart="25dp"
        android:text="Judul Item"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/gambarItem"
        app:layout_constraintTop_toTopOf="@+id/gambarItem" />

    <TextView
        android:id="@+id/deskripsiItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:text="Deskripsi Item"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/judulItem"
        app:layout_constraintStart_toEndOf="@+id/gambarItem" />

    <TextView
        android:id="@+id/rarityItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"
        android:text="Rarity Item"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/deskripsiItem" />

</androidx.constraintlayout.widget.ConstraintLayout>