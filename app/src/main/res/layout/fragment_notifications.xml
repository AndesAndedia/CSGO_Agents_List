<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <TextView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="@string/title_notifications"
        android:textColor="@color/black"
        android:textSize="15pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profpict"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="17dp"
        android:scaleType="centerCrop"
        android:src="@drawable/duolato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile" />


    <TextView
        android:id="@+id/nameKanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="@string/namaProfilKanan"
        android:textColor="@color/purple_700"
        android:textSize="12pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profpict" />

    <TextView
        android:id="@+id/nameKiri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="@string/namaProfilKiri"
        android:textColor="@color/purple_700"
        android:textSize="12pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instagramlogo1" />
    <TextView
        android:id="@+id/angkatan1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prodi"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameKanan" />
    <TextView
        android:id="@+id/angkatan2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prodi"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameKiri" />

    <ImageView
        android:id="@+id/linkedInlogo1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/linkedin"
        app:layout_constraintEnd_toEndOf="@+id/angkatan1"
        app:layout_constraintTop_toBottomOf="@+id/angkatan1"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/instagramlogo1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/instagram"
        app:layout_constraintStart_toStartOf="@+id/angkatan1"
        app:layout_constraintTop_toBottomOf="@+id/angkatan1"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/instagramlogo2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/instagram"
        app:layout_constraintStart_toStartOf="@+id/angkatan2"
        app:layout_constraintTop_toBottomOf="@+id/angkatan2"
        tools:ignore="ContentDescription" />


    <ImageView
        android:id="@+id/linkedInlogo2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/linkedin"
        app:layout_constraintEnd_toEndOf="@+id/angkatan2"
        app:layout_constraintTop_toBottomOf="@+id/angkatan2"
        tools:ignore="ContentDescription" />


</androidx.constraintlayout.widget.ConstraintLayout>